<table class="table">
  <tr>
    <th>購入者</th>
    <td><%= @order.user.family_name %><%= @order.user.last_name %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.post_code %><%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url: admins_order_path(@order),method: :patch do |f| %>
        <%= f.select :flag, [['入金待ち', 1], ['入金確認', 2], ['製作中', 3], ['発送準備中', 4], ['発送済み', 5]], { include_blank: false, selected: 1 }, { id: "flag", class: "form-control" } %>
        <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </td>
  </tr>
</table>