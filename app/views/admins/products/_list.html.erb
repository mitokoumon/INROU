<% @products.each do |product| %>
  <tr>
  <td>
    <%=  product.id  %>
  </td>
  <td>
    <%= link_to admins_product_path(product.id) do %>
      <%= product.name %>
    <% end %>
  </td>
  <td>
    <%= (product.now_price).round.to_s(:delimited) %>円
  </td>
  <td>
    <%= product.category.name %>
  </td>
  <td>
    <% if product.flag == 1 %>
      <span>販売中</span>
    <% else %>
      <span>販売停止中</span>
    <% end %>
  </td>
  </tr>
<% end %>