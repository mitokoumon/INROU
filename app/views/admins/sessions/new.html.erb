<%= render "admins/tops/header" %>
<div style="width:250px; text-align: center; margin-left:200px; margin-top:50px">
  <h3 style="background-color: #EEEEEEEE">管理者ログイン</h3>
</div>
<div style="height:40px">
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div style="margin: 0 20px 40px 0">
    <%= flash[:alert]%>
  </div>
    <div class="flex row" style="margin-bottom: 20px;">
      <div class="col-xs-2"></div>
      <div align="right" class="col-xs-2">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-xs-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
      </div>
    </div>
    <div class="flex row" style="margin-bottom: 20px;">
      <div class="col-xs-2"></div>
      <div align="right" class="col-xs-2">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-xs-2">
        <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3"></div>
      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
<style>
.flex {
    display: flex;
  }
  .flex > div {
    margin:auto 0;
  }
</style>
