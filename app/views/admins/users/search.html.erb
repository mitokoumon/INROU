<%= render "admins/tops/header" %>
<h3>検索結果</h3>

<h6>会員情報</h6>
<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to "#{user.family_name}#{user.last_name}", admins_user_path(user) %></td>
      <td><%= user.email %></td>
      <td>
        <% if user.flag == 1 %>
          <p>有効</p>
        <% else %>
          <p>退会済み</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h6>商品情報</h6>
<div class = "container">
  <div class = "row">
    <div class ="col-xs-12">
      <% @products.each do |product| %>
        <% if product.category.flag == 1 %>
          <%= link_to product_path(product.id) do %>
            <%=  attachment_image_tag product,:image, size: "100x100",format: 'jpeg',fallback: "no_image.jpg" %><br>
            <%= product.name %><br>
          <% end %>
          <%= (product.now_price).round.to_s(:delimited) %><br>
          <%= product.category.name %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>