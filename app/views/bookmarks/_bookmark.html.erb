<% if user_signed_in? %>
  <% if product.bookmarked_by?(current_user) %>
    <%= link_to product_bookmarks_path(product), method: :delete, remote: true do %>
      <i class="fa fa-heart" style="color: red;"></i>
    <% end %>
  <% else %>
    <%= link_to product_bookmarks_path(product), method: :post, remote: true do %>
      <i class="fa fa-heart-o"></i>
    <% end %>
  <% end %>
<% end %>
