<%= render "users/unless_login_header" %>
<div class = "container">
	<div class = "row">
		<div class="col-xs-4">
			<%= render "sidecategory",categories:@categories%>
		</div>
		<div class ="col-xs-8">
			<% if @category.present? %>
				<b><%= @category.name %>一覧</b>
			<% else %>
				<b>商品一覧</b>
			<% end %>
			全<%= @total_number %>件
			<% @products.each do |product| %>
				<% if product.category.flag == 1 %>
					<%= link_to product_path(product.id) do %>
						<%=  attachment_image_tag product,:image, size: "100x100",format: 'jpeg',fallback: "no_image.jpg" %><br>
						<%= product.name %><br>
					<% end %>
					<%= (product.now_price).round.to_s(:delimited) %><br>
					<%= product.category.name %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>

