<%= render "users/unless_login_header" %>
<div class = "container">
	<div class = "row">
			<%= render "sidecategory",categories:@categories%>
		<div class ="col-xs-8">
			<div class="flex">
				<div>
					<% if @category.present? %>
						<h3><strong><%= @category.name %>一覧</strong></h3>
					<% else %>
						<h3><strong>商品一覧</strong></h3>
					<% end %>
			  </div>
			  <div class="title">
					<h4>全<%= @total_number %>件</h4>
			  </div>
			</div>
			<div class="flex">
					<% @products.each do |product| %>
						<% if product.category.flag == 1 %>
							<div class="product">
								<%= link_to product_path(product.id) do %>
									<%=  attachment_image_tag product,:image, size: "120x90",format: 'jpeg',fallback: "no_image.jpg" %><br>
									<p style="width: 120px"><%= product.name %></p>
								<% end %>
								  <% if user_signed_in? %>
									<% if product.liked_by?(current_user) %>
									<%= link_to product_likes_path(product.id), method: :delete do %>
										<i class="fa fa-heart" aria-hidden="true" sytle="color: red"></i>
										<%= @product.likes.count %>
									<% end %>
								<% else %>
									<%= link_to product_likes_path(product.id), method: :post do %>
										<i class="fa fa-heart-o" aria-hidden="true"></i>
										<%= @product.likes.count %>
									<% end %>
								<% end %>
								<% end %>
								<p>￥<%= (product.now_price).round.to_s(:delimited) %></p>
							</div>
						<% end %>
					<% end %>
		  </div>
		  <div class="paginate"><%= paginate @products %></div>
		</div>
	</div>
</div>


<style>
	.flex {
		display: flex;
		flex-flow: row wrap;
		align-content: flex-start;
	}
	.flex > div {
		padding: auto 0;
	}
	.title {
		padding-top: 15px;
	}
	.flex > .product {
		margin: 10px 5px;
	}
	.paginate {
		width: 100%;
		text-align: center;
	}
</style>

